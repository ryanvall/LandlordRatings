@model IEnumerable<LandlordRatings.Models.RatingModel>

@{
    ViewData["Title"] = "Rating Preview";
}

@if (Model.Count() != 0)
{
    <h4>A few sample ratings:</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FlexibilityScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PersonalityScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PriceScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResponsivenessScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OverallScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
            </tr>
        </thead>
        <tbody>
            @*Display only up to 5 ratings*@
            @foreach (var rating in Model.Take(5))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(ratingItem => rating.FlexibilityScore)
                    </td>
                    <td>
                        @Html.DisplayFor(ratingItem => rating.PersonalityScore)
                    </td>
                    <td>
                        @Html.DisplayFor(ratingItem => rating.PriceScore)
                    </td>
                    <td>
                        @Html.DisplayFor(ratingItem => rating.ResponsivenessScore)
                    </td>
                    <td>
                        @Html.DisplayFor(ratingItem => rating.OverallScore)
                    </td>
                    <td>
                        @Html.DisplayFor(ratingItem => rating.Comments)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No ratings found. Be the first to submit one <a asp-controller="Ratings" asp-action="Create" asp-route-id="@ViewData["LandlordID"]">here!</a></p>
}
