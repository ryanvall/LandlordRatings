@model IEnumerable<LandlordRatings.Models.LandlordModel>

@{
    ViewData["Title"] = "Landlords Index";
}

<h2>Landlords Index</h2>

@if (Model.Count() != 0)
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zipcode)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var landlord in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(landlordItem => landlord.Name)
        </td>
        <td>
            @Html.DisplayFor(landlordItem => landlord.Type)
        </td>
        <td>
            @Html.DisplayFor(landlordItem => landlord.City)
        </td>
        <td>
            @Html.DisplayFor(landlordItem => landlord.State)
        </td>
        <td>
            @Html.DisplayFor(landlordItem => landlord.Zipcode)
        </td>
        <td>
            <a asp-action="Details" asp-route-id="@landlord.LandlordID">Details</a>
        </td>
        @*edit/details/delete go here*@
    </tr>

}
    </tbody>
</table>

<p>Don't see your landlord? Add your's <a asp-action="Create" asp-controller="Landlords">here!</a></p>
}
else
{
    <p>No landlords found. Add one <a asp-action="Create" asp-controller="Landlords">here!</a></p>
}
